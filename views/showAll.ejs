<% include partials/header %>

<div class="container px-0">
    <div class="jumbotron pb-2 mb-1 pt-3">
        <h1><i class="fas fa-industry"></i> Forgotten Sites</h1>
        <p>View all those forgotten places afround the area! No bullshit, just dark and rusty!!</p>
        <p>
            <a class="btn btn-primary btn-sm" href="/sites/new"> <i class="fas fa-plus"></i> Add new site</a>
        </p>
    </div>

        <div class="row row-eq-height mx-0">   
        <% sites.forEach(function(site){ %>
            <div class="col-sm-12 col-md-6 col-lg-3 px-1 py-2">
                <div class="img-thumbnail">
                    <img class="img-fluid" src=<%= site.image %>>
                    <div class="caption text-center">
                        <h6><%= site.name %></h6>
                    </div>
                    <div class="caption text-center p-0 mb-2">
                        <a class="btn btn-primary btn-sm" href="/sites/<%= site._id %>">
                            Read more <i class="fas fa-angle-double-right"></i> 
                        </a>
                    </div>
                </div>
            </div>
        
        
    <% }); %>
        
    </div>
</div>
<% include partials/footer %>